<Window x:Class="MenuAggregator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuAggregator"
        xmlns:tools="clr-namespace:MenuAggregator.Classes"
        mc:Ignorable="d"
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='.8' }" 
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='.8' }"
        MinHeight= "745" 
        MinWidth=  "1300"
        FontFamily="Segoe UI Emoji"
        WindowStartupLocation="CenterScreen"
        Title="Menu Aggregator"
        Icon="WinAggIcons.ico"
        >
    <Grid Background="OldLace">
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
